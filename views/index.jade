doctype
html(lang='es')
	head
		title='Mostrar'
		
		link(rel="stylesheet" type="text/css" href="../css/jquery.dataTables.css")
		script(src="../js/jquery-1.11.2.min.js")
		script(type="text/javascript" charset="utf8" src="../js/jquery.dataTables.js")
		script(src="../js/bootstrap.min.js")
		link(href="../css/bootstrap.min.css" rel="stylesheet")
		link(href="../css/estilo.css" rel="stylesheet")
			
		
		script(type='text/javascript').
			$(document).ready(function(){
			$('#table_id').dataTable({
			responsive: true,
			"language": {
			"url": "../js/Spanish.json"
			},
			"scrollY": "400px",
			"paging": false
			});});
		
        
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(charset='utf-8')
	body
		nav(class="navbar navbar-default navbar-fixed-top" id="blur")
				div(class="container-fluid")
					div(class="navbar-header")
						button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#hid")
							span(class="icon-bar")
							span(class="icon-bar")
							span(class="icon-bar")
						img(class="img-responsive" href="#" src="../img/logo.png")
					div(class="collapse navbar-collapse" id="hid")
						ul(class="nav navbar-nav navbar-right")
							li: a(href="/publicaciones")
								img(src="../img/home.png" onclick="android();"  class=" img-responsive img-circle center-block")
							li: a(href="/publicadas")
								img(src="../img/locate.png" onclick="android();"  class=" img-responsive img-circle center-block")
		br
		br
		br

		div(class="container")
			h2 Publicaciones

			div(class="table-responsive")
				table(class="table table-striped table-hover" cellspacing="0" width="100%" id="table_id")

					thead: tr
							th Contenido
							th: center PDF
							th: center Imagen
							th Usuario
							th Área
							th Fecha
							th: center Editar
							th: center Eliminar
						tbody
								if (pub)
									each p in pub
										tr
											td #{p.contenido}
											td: center
												- if( p.contenido )
													img(src="../img/pdffile.png" title="Pdf")
											td: center 
												- if( p.contenido )
													img(src="../img/jpgfile.png" title="Jpg")
											td #{p.usuario}
											td #{p.area}
											td #{p.fecha}
											td: center: a(href="/publicaciones/#{p._id}"): img(src="../img/edit.png" title="Editar")
											td: center
												form(method="post", action="/publicaciones/#{p._id}")
													input(type="hidden",name="_method",value="DELETE")
													a(href="javascript:void(0);", onclick="if(confirm('¿Está seguro que desea eliminar este registro?')){this.parentNode.submit();}"): img(src="../img/delete.png" title="eliminar")
			br
			footer(class="footer" ) 
						